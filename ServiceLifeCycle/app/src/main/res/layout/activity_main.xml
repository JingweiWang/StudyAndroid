<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.jingweiwang.servicelifecycle.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="方式1. 通过 startService() 开启服务: " />

    <Button
        android:id="@+id/start_service_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Service For Start" />

    <Button
        android:id="@+id/stop_service_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service For Start" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="方式2. 通过 bindService() 开启服务: " />

    <Button
        android:id="@+id/bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind Service" />

    <Button
        android:id="@+id/unbind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind Service" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="方式3. 使用 IntentService : " />

    <Button
        android:text="start ServiceIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_ServiceIntent" />
</LinearLayout>

