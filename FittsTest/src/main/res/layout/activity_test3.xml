<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    tools:context="io.github.jingweiwang.fittstest.Test1Activity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_pink"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/radioButton_blue"
            android:background="@drawable/fab_pink"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:id="@+id/textView_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <RadioButton
            android:id="@+id/radioButton_blue"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radioGroup"
            android:background="@drawable/fab_blue"
            android:button="@null"
            android:checked="false" />

    </RadioGroup>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="90" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar"
        android:text="直径:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="距离:" />

    <TextView
        android:id="@+id/textView_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/textView"
        android:text="350" />

    <TextView
        android:id="@+id/textView_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:text="450" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:text="难度系数:" />

    <TextView
        android:id="@+id/textView_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dist"
        android:layout_toEndOf="@+id/textView8"
        android:text="1.1926" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/textView_d"
        android:text="px" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_ID"
        android:layout_toEndOf="@+id/textView_dist"
        android:text="px" />


</RelativeLayout>
