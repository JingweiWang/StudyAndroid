<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/button_missing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="missing" />

    <Button
        android:id="@+id/button_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ERROR(MissingBackpressureException)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_buffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buffer(OOM)" />

    <Button
        android:id="@+id/button_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="drop(only 0~127)" />

    <Button
        android:id="@+id/button_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="latest(only 0~127 and 999)" />
</LinearLayout>